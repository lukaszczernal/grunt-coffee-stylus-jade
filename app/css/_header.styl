.header
	position fixed
	top 0
	width 100%
	height 70px
	background-color #fff
	border-bottom 1px solid #ccc

.header-logo
	position absolute
	width 100%
	line-height 70px

.header-logoImage
	vertical-align middle
	max-width 180px
	min-width 100px
	width 30%
	margin-left 1em

.header-menu
	position absolute
	margin 0 0 0 30%
	padding 0px
	line-height 70px

.header-menuItem
	display inline
	vertical-align middle

.header-menuLink
	padding 1em 1em
	text-decoration none
	font-size 13px
	font-weight bold
	color #333
	text-transform uppercase

	&:hover
		text-decoration underline

	&:active
		color blue